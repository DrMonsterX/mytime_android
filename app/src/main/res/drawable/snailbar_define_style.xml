<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"
        >
        <shape>
            <corners android:radius="10dip" />
            <gradient
                android:startColor="#f5f4f9"
                android:centerColor="#e9f4fa"
                android:endColor="#f5f4f9"
                android:centerY="0.45"
                android:angle="270"/>
        </shape>
    </item>

    <item android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners android:radius="10dip" />
                <gradient
                    android:startColor="#031c61"
                    android:centerColor="#9bc2e9"
                    android:endColor="#031c61"
                    android:centerY="0.45"
                    android:angle="270"/>
            </shape>
        </clip>
    </item>
</layer-list>