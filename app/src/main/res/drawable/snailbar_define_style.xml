<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"
        >
        <shape>
            <corners android:radius="10dip" />
            <gradient
                android:startColor="#e9e8f4"
                android:centerColor="#c1e8f4"
                android:endColor="#e9e8f4"
                android:centerY="0.45"
                android:angle="270"/>
        </shape>
    </item>

    <item android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners android:radius="10dip" />
                <gradient
                    android:startColor="#4e70de"
                    android:centerColor="#80b0df"
                    android:endColor="#4e70de"
                    android:centerY="0.45"
                    android:angle="270"/>
            </shape>
        </clip>
    </item>
</layer-list>